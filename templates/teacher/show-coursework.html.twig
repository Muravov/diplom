{% extends 'base.html.twig' %}
{% block stylesheets %}
        {{ parent() }}

{% endblock %}
{% block body %}
<div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                <form action="{{ path('accept_coursework') }}" method="post">
                        <h3 class="display-7">&#9989; Антиплагиат пройден</h3>
                        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                                <h3 class="display-7">Выберете оценку</h3>
                                <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="assessment" id="flexSwitchCheckDefault" value="3">
                                        <label class="form-check-label" for="flexSwitchCheckDefault">3</label>
                                </div>
                                <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="assessment" id="inlineRadio2" value="4">
                                        <label class="form-check-label" for="inlineRadio2">4</label>
                                </div>
                                <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="assessment" id="inlineRadio2" value="5">
                                        <label class="form-check-label" for="inlineRadio2">5</label>
                                </div>
                        </div>
                        <div class="pricing-header mx-auto text-center">
                                <p class="fs-5">Студент: {{ student.fio }}</p>
                                <p class="fs-5">Группа: {{ student.gruppa }}</p>

                        </div>

                        <div class="row justify-content-center mx-auto text-center ms-1">
                                <div class="col-md-2 ">
                                        <p><input type="submit"  class="btn btn-success ms-1" name="success" value="Принять"></p>
                                </div>

                                <input type="hidden" name="courseworkResultId"
                                       value="{{ courseworkResultId }}"
                                >

                                <input type="hidden" name="courseworkId"
                                       value="{{ courseworkId }}"
                                >
                                <div class="col-md-2">
                                        <p><input type="submit"  class="btn btn-danger ms-1" name="fuckup" value="Отклонить"></p>
                                </div>

                        </div>


        </div>
                <div class="row justify-content-center">
                        <div class="col-md-4">
                                <table class="table table-responsive">
                                        <thead>
                                        <th scope="row">Параметр</th>
                                        </thead>
                                        <tbody>
                                        {% for data in parameter %}
                                                <tr>
                                                <td>{{ data }}</td>
                                                </tr>
                                        {% endfor %}
                                        </tbody>
                                </table>
                        </div>
                        <div class="col-md-4">
                                <table class="table table-responsive text-center">
                                        <thead>
                                        <th scope="row">Значение</th>
                                        <th scope="row">Значения не прошедшие контроль</th>
                                        </thead>
                                        <tbody>
                                        {% set count = 5 %}
                                        {% for data in coursework %}
                                                {% set count = count + 1 %}
                                                <tr>
                                                        <td>{{ data }}</td>
                                                        <td>
                                                                <input class="form-check-input"  name="fail_{{ count }}" type="checkbox" value="plagiat" id="flexCheckDefault">
                                                        </td>
                                                </tr>
                                        {% endfor %}
                                        </tbody>
                                </table>
                        </div>
                </div>
        </form>

</div>
{% endblock %}
