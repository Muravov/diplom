{% extends 'base.html.twig' %}
{% block stylesheets %}
        {{ parent() }}

{% endblock %}
{% block body %}
<div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                <h1 class="display-4">Добавление пользователя</h1>
                <p class="lead">Введите данные пользователя.</p>
        </div>

        <div class="row justify-content-md-center">
                        <div class="col-md-6">
                                <div class="card-deck mb-5 ">
                                        <div class="card mb-5 box-shadow">
                                                <form action="{{ path('api_add_user') }}" method="POST">
                                                <div class="card-header">
                                                        <h4 class="my-0 font-weight-normal text-center">Регистрация</h4>
                                                </div>
                                                <div class="card-body">
                                                        <div class="row gy-3">
                                                        <div class="form-group">
                                                                <label for="exampleInputEmail1">Введите email</label>
                                                                <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Email">
                                                        </div>
                                                        <div class="form-group">
                                                                <label for="fio">Введите ФИО</label>
                                                                <input class="form-control" id="fio" name="fio" placeholder="Фамилия Имя Отчество">
                                                        </div>

                                                        <label for="exampleInputEmail1">Выберете пол</label>
                                                        <div class="form-group">

                                                                <div class="form-check form-check-inline">
                                                                        <input class="form-check-input" type="radio" name="gender" id="gender1" value="м">
                                                                        <label class="form-check-label" for="gender1">Мужской</label>
                                                                </div>
                                                                <div class="form-check form-check-inline">
                                                                        <input class="form-check-input" type="radio" name="gender" id="gender2" value="ж">
                                                                        <label class="form-check-label" for="gender2">Женский</label>
                                                                </div>
                                                        </div>
                                                        <div class="form-group">
                                                                <label for="gruppa">Введите группу</label>
                                                                <input class="form-control" id="gruppa" name="gruppa" placeholder="Группа">
                                                        </div>
                                                                <label for="exampleInput">Выберете статус пользователя</label>
                                                                <div class="form-group1">

                                                                        <div class="form-check form-check-inline">
                                                                                <input class="form-check-input" type="radio" name="role" id="role1" value="ROLE_USER">
                                                                                <label class="form-check-label" for="role1">Студент</label>
                                                                        </div>
                                                                        <div class="form-check form-check-inline">
                                                                                <input class="form-check-input" type="radio" name="role" id="role2" value="ROLE_TEACHER">
                                                                                <label class="form-check-label" for="role2">Преподаватель</label>
                                                                        </div>
                                                                        <div class="form-check form-check-inline">
                                                                                <input class="form-check-input" type="radio" name="role" id="role3" value="ROLE_ADMIN">
                                                                                <label class="form-check-label" for="role3">Администратор</label>
                                                                        </div>
                                                                </div>
                                                        <div class="form-group">
                                                                <label for="password">Задайте пароль</label>
                                                                <input class="form-control" id="password" name="password" placeholder="Пароль">
                                                        </div>
                                                        <div class="form-group center">
                                                                <p><input type="submit"  class="btn btn-lg btn-block btn-primary" value="Регистрация"></p>
                                                        </div>
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                        </div>
        </div>


</div>
{% endblock %}
